rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all collections for single-user app
    // Since this is a personal exam preparation app with no authentication,
    // we allow full access. For production, consider adding additional security.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

